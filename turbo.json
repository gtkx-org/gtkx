{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "codegen": {
            "outputs": ["src/generated/**"]
        },
        "build": {
            "dependsOn": ["^build", "codegen", "native-build"],
            "outputs": ["dist/**", "build/**", "*.tsbuildinfo"]
        },
        "native-build": {
            "outputs": ["target/**", "index.node", "cargo.log"]
        },
        "start": {
            "dependsOn": ["build"],
            "persistent": true,
            "cache": false
        },
        "test": {
            "dependsOn": ["build"]
        },
        "website#build": {
            "dependsOn": ["@gtkx/ffi#codegen", "@gtkx/react#codegen"],
            "outputs": ["build/**", ".docusaurus/**", "docs/api/**"]
        },
        "website#start": {
            "dependsOn": ["@gtkx/ffi#codegen", "@gtkx/react#codegen"],
            "persistent": true,
            "cache": false
        }
    }
}
