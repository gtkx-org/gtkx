{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["tsconfig.base.json", "biome.json"],
    "globalEnv": ["NODE_VERSION", "GTK4_VERSION", "VERSION"],
    "globalPassThroughEnv": ["TURBO_TOKEN", "TURBO_TEAM"],
    "cacheDir": ".turbo",
    "tasks": {
        "//#lint:all": {
            "inputs": ["**/*.ts", "**/*.tsx", "**/*.json", "biome.json"],
            "outputs": [],
            "outputLogs": "new-only"
        },
        "//#knip:all": {
            "dependsOn": ["//#codegen:run", "@gtkx/vitest#build"],
            "inputs": ["**/*.ts", "**/*.tsx", "knip.json", "package.json"],
            "outputs": [],
            "outputLogs": "new-only"
        },
        "//#codegen:run": {
            "dependsOn": ["@gtkx/codegen#build"],
            "inputs": [
                "$TURBO_ROOT$/girs/**",
                "$TURBO_ROOT$/packages/gir/src/**",
                "$TURBO_ROOT$/packages/codegen/src/**"
            ],
            "outputs": ["packages/ffi/src/generated/**", "packages/react/src/generated/**"],
            "outputLogs": "new-only"
        },
        "lint": {
            "inputs": ["*.ts", "src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "scripts/**/*.ts"],
            "outputs": [],
            "outputLogs": "new-only",
            "passThroughEnv": ["RUSTUP_TOOLCHAIN"]
        },
        "build": {
            "dependsOn": ["^build", "native-build"],
            "inputs": [
                "$TURBO_ROOT$/README.md",
                "package.json",
                "*.ts",
                "bin/**",
                "src/**/*.ts",
                "src/**/*.tsx",
                "tsconfig.json",
                "tsconfig.app.json",
                "tsconfig.lib.json",
                "tsconfig.test.json"
            ],
            "outputs": ["dist/**", "out-tsc/**", "*.tsbuildinfo", "README.md"],
            "outputLogs": "new-only"
        },
        "native-build": {
            "inputs": ["Cargo.toml", "Cargo.lock", "src/**/*.rs"],
            "outputs": ["index.node"],
            "outputLogs": "new-only",
            "passThroughEnv": ["RUSTUP_TOOLCHAIN", "CARGO_INCREMENTAL", "CARGO_NET_RETRY"]
        },
        "native-test": {
            "dependsOn": ["native-build"],
            "inputs": ["Cargo.toml", "src/**/*.rs"],
            "outputs": [],
            "outputLogs": "new-only",
            "passThroughEnv": ["RUSTUP_TOOLCHAIN"]
        },
        "start": {
            "dependsOn": ["build"],
            "persistent": true,
            "cache": false
        },
        "test": {
            "dependsOn": ["^build", "native-test"],
            "inputs": ["vitest.config.ts", "src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
            "outputLogs": "new-only"
        },
        "@gtkx/ffi#build": {
            "dependsOn": ["^build", "//#codegen:run"],
            "outputs": ["dist/**", "out-tsc/**", "*.tsbuildinfo", "README.md"],
            "outputLogs": "new-only"
        },
        "@gtkx/react#build": {
            "dependsOn": ["^build", "//#codegen:run"],
            "outputs": ["dist/**", "*.tsbuildinfo", "README.md"],
            "outputLogs": "new-only"
        },
        "website#build": {
            "dependsOn": ["@gtkx/ffi#build", "@gtkx/react#build"],
            "outputs": ["build/**", ".docusaurus/**", "docs/api/**"],
            "outputLogs": "new-only"
        },
        "website#start": {
            "dependsOn": ["@gtkx/ffi#build", "@gtkx/react#build"],
            "persistent": true,
            "cache": false
        }
    }
}
