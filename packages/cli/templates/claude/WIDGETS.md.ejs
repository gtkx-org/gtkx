                </x.Slot>
            </AdwHeaderBar>
        </x.ContainerSlot>
        <MainContent />
        <x.ContainerSlot for={AdwToolbarView} id="addBottomBar">
            <GtkActionBar />
        </x.ContainerSlot>
    </AdwToolbarView>
</AdwApplicationWindow>
```

