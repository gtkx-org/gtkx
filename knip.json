{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "workspaces": {
        "packages/ffi": {
            "project": ["src/**/*.ts", "scripts/**/*.ts"]
        },
        "packages/gir": {
            "project": ["src/**/*.ts"]
        },
        "packages/gtkx": {
            "project": ["src/**/*.ts", "scripts/**/*.ts"]
        },
        "packages/native": {
            "entry": ["types.ts", "tests/**/*.test.ts"]
        },
        "packages/react": {
            "entry": ["src/types.ts"]
        },
        "website": {
            "ignoreDependencies": ["typedoc", "typedoc-plugin-frontmatter"]
        }
    },
    "ignore": ["**/dist/**", "**/node_modules/**", "**/*.d.ts", "**/src/generated/**"],
    "ignoreExportsUsedInFile": true
}
