{
    "name": "deploying",
    "version": "0.1.0",
    "private": true,
    "description": "Example demonstrating GTKX app packaging for Linux",
    "type": "module",
    "gtkx": {
        "appId": "org.gtkx.example"
    },
    "scripts": {
        "build": "gtkx build",
        "dev": "gtkx dev src/dev.tsx",
        "start": "node dist/bundle.js",
        "bundle": "gtkx build --asset-base ../share/gtkx-example && tsx scripts/bundle.ts",
        "bundle:postject": "tsx scripts/bundle-postject.ts",
        "build:sea": "bash scripts/build-sea.sh",
        "build:flatpak": "pnpm bundle:postject && bash flatpak/build.sh",
        "build:snap": "pnpm bundle:postject && bash snap/build.sh"
    },
    "dependencies": {
        "@gtkx/ffi": "workspace:*",
        "@gtkx/react": "workspace:*",
        "react": "^19.2.4"
    },
    "devDependencies": {
        "@gtkx/cli": "workspace:*",
        "@types/react": "^19.2.13",
        "esbuild": "^0.27.3",
        "postject": "1.0.0-alpha.6",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1"
    }
}
