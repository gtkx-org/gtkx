{
    "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
    "assist": {
        "enabled": true
    },
    "css": {
        "parser": {
            "cssModules": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120
    },
    "linter": {
        "rules": {
            "style": {
                "useConsistentArrayType": {
                    "level": "error",
                    "options": {
                        "syntax": "shorthand"
                    }
                }
            },
            "suspicious": {
                "noRedeclare": "off"
            }
        }
    },
    "overrides": [
        {
            "includes": ["examples/gtk-demo/src/demos/css/*.css"],
            "linter": {
                "enabled": false
            },
            "formatter": {
                "enabled": false
            }
        }
    ],
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
