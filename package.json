        "knip:all": "knip --no-gitignore --no-config-hints",
        "lint": "turbo lint:all && turbo lint --filter=!website --filter=!gtkx",
        "lint:all": "biome check .",
        "test": "turbo test --filter=!website --filter=!gtkx"
